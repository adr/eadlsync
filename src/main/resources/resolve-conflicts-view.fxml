<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<DialogPane prefHeight="300.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <header>
      <Label fx:id="lblTitle" alignment="CENTER" wrapText="true" />
   </header>
   <content>
      <BorderPane>
         <top>
            <SplitPane dividerPositions="0.5" BorderPane.alignment="CENTER">
              <items>
                  <VBox>
                     <children>
                        <TextArea fx:id="txtLocalDecision" editable="false" prefHeight="300.0" />
                        <RadioButton fx:id="radioLocalDecision" mnemonicParsing="false" text="Choose local changes" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <TextArea fx:id="txtRemoteDecision" editable="false" prefHeight="300.0" />
                        <RadioButton fx:id="radioRemoteDecision" mnemonicParsing="false" text="Choose remote changes" />
                     </children>
                  </VBox>
              </items>
            </SplitPane>
         </top>
         <bottom>
            <BorderPane BorderPane.alignment="CENTER">
               <bottom>
                  <ButtonBar BorderPane.alignment="CENTER">
                    <buttons>
                        <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#close" text="Cancel" />
                      <Button fx:id="btnFinish" mnemonicParsing="false" onAction="#resolveConflicts" text="Finish" />
                        <Button fx:id="btnNext" defaultButton="true" mnemonicParsing="false" onAction="#goNext" text="Next" />
                    </buttons>
                  </ButtonBar>
               </bottom>
               <center>
                  <ListView fx:id="listDecisions" disable="true" prefHeight="200.0" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </bottom>
      </BorderPane>
   </content>
   <graphic>
      <ScrollPane prefHeight="200.0" prefWidth="200.0" />
   </graphic>
</DialogPane>
